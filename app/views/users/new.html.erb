<% provide(:title, 'Registro') %>
<h1>Registro de novo usuário</h1>
<hr>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= f.label :name, "Nome" %>
      <%= f.text_field :name, class: 'form-control'  %>
      
      <%= f.label :crm, "CRM" %>
      <%= f.text_field :crm, class: 'form-control'  %>

      <%= f.label :email, "Email" %>
      <%= f.text_field :email, class: 'form-control'  %>

      <%= f.label :password, "Senha" %>
      <%= f.password_field :password, class: 'form-control'  %>

      <%= f.label :password_confirmation, "Confirmação" %>
      <%= f.password_field :password_confirmation, class: 'form-control'  %>

      <%= f.submit "Criar minha conta", class: "btn btn-primary"%>
    <% end %>
  </div>
  <div id="error_explanation" class="col-md-3 error_explanation">
  <% if @user.errors.any? %>
    The form contains <%= pluralize(@user.errors.count, "error") %>.
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>
  </div>
</div>
